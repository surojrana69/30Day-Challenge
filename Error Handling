#Exception OR ERROR HANDLING

a = input("Enter the number:")
print(f"Multiplication table of {a} is: ")

try: # Handle any exception that occurs during the inputconversion or loop execution
  for b in range (1,11): 
   print(f"{int(a)} X {b} = {int(a)*b}")
  

except:  #Print an error message if the input is not a valid integer
  print("Invalid Input")


print("My name is Suroj Rana")
print("END")





#Example
a = input("Enter the number:")
print(f"Factorial of {a} is: ")

try:
    n = int(a)
    factorial = 1
    for i in range(1, n + 1):
        factorial *= i
    print(f"The factorial of {n} is {factorial}")
except:
    print("Invalid Input")

print("My name is Suroj Rana")
print("END")
